<div>
  <div class='itemTitle'> 
    <span class='noDec'>
      <span class="showLabel">SHOW: </span>
      <strong><%= h search_result["title"] %></strong>
    </span> 
  </div>

  <div class="showThumb" align="center" > 
    <a href='javascript:ShowPreview("<%= escape_javascript(search_result["link"]) %>","<%= escape_javascript(search_result["title"]) %>","<%= search_result_counter %>", "<%=  "result_#{search_result.object_id}" %>" )'>
      <img src="<%= search_result["thumbnail"]["url"] %>"/>
    </a>
    <br />
    <div class="metaData"> 
      <%= search_result["episode_count"] %> Episodes <br />   
      <% unless search_result["last_published"].blank? %>
        Updated <%= h time_ago_in_words(Time.parse(search_result["last_published"])) %> ago
      <% end %>
    </div>
  </div>

  <div class='des'> 
    <%= search_result["description"] %> 
  </div>
  <div class='buttons'> 
    <a id="<%= "result_#{search_result.object_id}" %>" class='' href='javascript:ShowPreview("<%= escape_javascript(search_result["link"]) %>","<%= escape_javascript(search_result["title"]) %>","<%= search_result_counter %>", "<%=  "result_#{search_result.object_id}" %>" )'>View Episodes</a>
  </div>

  <div class='previewPanel' id='bppreview<%= search_result_counter%>'>Loading...</div>
  <div style="width:100%;height:1px;margin 0 0 -1px;clear: both"></div>
</div>

