<div class="searchResult">
	<div align="center" class="showThumb"> 
    <a href='javascript:ShowPreview("<%= escape_javascript(search_result["link"]) %>","<%= escape_javascript(search_result["title"]) %>","<%= search_result_counter %>", "<%=  "result_#{search_result.object_id}" %>" )'>
      <img src="<%= search_result["thumbnail"]["url"] %>"/>
    </a>  
  </div>

	<div class="des">
  		<div class="itemTitle"> 
        <span class="noDec">
          <span class="showLabel">SHOW: </span>
      	  <strong><%= h search_result["title"] %></strong>
        </span> 
  		</div> 
    	
       <%= search_result["description"] %>
     </div>
  		
     <div class="metaData"> 
       <a href='javascript:ShowPreview("<%= escape_javascript(search_result["link"]) %>","<%= escape_javascript(search_result["title"]) %>","<%= search_result_counter %>", "<%=  "result_#{search_result.object_id}" %>" )' class="" id="<%= "result_#{search_result.object_id}" %>"><%= pluralize(search_result["episode_count"], "Episode") %></a>   
      
      	<span class="updatedDate">Updated <%= h time_ago_in_words(Time.parse(search_result["last_published"])) %> ago</span>
     </div>

  	<div id='bppreview<%= search_result_counter%>' class="previewPanel">Loading...</div>
  		
    <div style="width: 100%; height: 1px; clear: both;"></div>
</div>

